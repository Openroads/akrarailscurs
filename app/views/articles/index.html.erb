<h1>Articles</h1>
<div>
    <%= link_to "New article", new_article_path %>
</div>
<br/>

<table>
    <thead>
        <tr>
            <th>Tytul</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |a| %>
            <tr>
                <td><%= link_to a.title, article_path(a) %></td>
                <td><%= link_to 'Edit', edit_article_path(a) %></td>
                <td><%= link_to 'Destroy', article_path(a),
                                            method: :delete,
                                            data: { confirm: 'Are you sure?' } %>
                </td>
                <td></td>
            </tr>
        <% end %>
    </tbody>
</table>
